generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funnel {
  id          Int      @id @default(autoincrement())
  title       String
  blocks      String?
  layoutMode  String   @default("bottomBig")
  styleMode   String   @default("filled")
  textAlign   String   @default("left")
  toggles     String?
  blockWidth  Int      @default(100)
  blockHeight Int      @default(70)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "funnels_userId_fkey")
  @@map("funnels")
}

model Diagram {
  id        Int      @id @default(autoincrement())
  title     String
  nodes     String?
  edges     String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id], map: "Diagram_userId_fkey")

  @@index([userId], map: "Diagram_userId_fkey")
}

model DiagramFormula {
  id        Int      @id @default(autoincrement())
  title     String
  formula   String   @default("")
  nodes     String?
  edges     String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id], map: "DiagramFormula_userId_fkey")

  @@index([userId], map: "DiagramFormula_userId_fkey")
}

model Kanban {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String
  columns   String?
  blocks    String?
  style     String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], map: "Kanban_userId_fkey")

  @@index([userId], map: "Kanban_userId_fkey")
}

model TemplateDiagram {
  id       Int     @id @default(autoincrement())
  title    String
  category String
  nodes    String? @db.LongText 
  edges    String? @db.LongText 
}

model TemplateFormula {
  id       Int     @id @default(autoincrement())
  title    String
  category String
  nodes    String? @db.LongText 
  edges    String? @db.LongText 
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique(map: "User_email_key")
  name           String?
  password       String
  role           user_role        @default(user)
  createdAt      DateTime         @default(now())
  diagram        Diagram[]
  diagramformula DiagramFormula[]
  funnels        Funnel[]
  kanban         Kanban[]
}

enum user_role {
  user
  admin
}
