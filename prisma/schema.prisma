generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql" // prod:mysql | dev:sqlite
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model User {
  id  Int @id @default(autoincrement())
  email String  @unique
  name  String?
  password  String
  role      Role     @default(user)
  createdAt DateTime @default(now())
  scheme      Scheme[]
}

model Scheme { 
  id  Int @id @default(autoincrement())
  title String
  formula String @default("") 
  nodes String?
  edges String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model NodeTemplate { 
  id  Int @id @default(autoincrement())
  title String
  category String
  nodes String?
  edges String?
}
