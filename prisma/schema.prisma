generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funnel {
  id          Int      @id @default(autoincrement())
  title       String   @db.Text
  blocks      String?  @db.LongText
  layoutMode  String   @default("bottomBig")
  styleMode   String   @default("filled")
  textAlign   String   @default("left")
  toggles     String?
  blockWidth  Int      @default(100)
  blockHeight Int      @default(70)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "funnels_userId_fkey")
  @@map("funnels")
}

model Kanban {
  id        Int      @id @default(autoincrement())
  userId    Int
  title     String   @db.Text
  columns   String?  @db.LongText
  blocks    String?  @db.LongText
  style     String?  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  image     String?
  user      User     @relation(fields: [userId], references: [id], map: "Kanban_userId_fkey")

  @@index([userId], map: "Kanban_userId_fkey")
}

model Diagram {
  id        Int      @id @default(autoincrement())
  title     String   @db.Text
  nodes     String?  @db.LongText
  edges     String?  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  image     String?
  user      User     @relation(fields: [userId], references: [id], map: "Diagram_userId_fkey")

  @@index([userId], map: "Diagram_userId_fkey")
}

model Ontology {
  id        Int      @id @default(autoincrement())
  title     String   @db.Text
  formula   String   @db.Text
  nodes     String?  @db.LongText
  edges     String?  @db.LongText
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  image     String?
  user      User     @relation(fields: [userId], references: [id], map: "Ontology_userId_fkey")

  @@index([userId], map: "Ontology_userId_fkey")
}

model TemplateDiagram {
  id       Int     @id @default(autoincrement())
  title    String  @db.Text
  category String  @db.Text
  nodes    String? @db.LongText
  edges    String? @db.LongText
  image    String?
}

model TemplateOntology {
  id       Int     @id @default(autoincrement())
  title    String  @db.Text
  category String  @db.Text
  nodes    String? @db.LongText
  edges    String? @db.LongText
  image    String?
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique(map: "User_email_key")
  name      String?
  password  String
  role      user_role  @default(user)
  createdAt DateTime   @default(now())
  diagram   Diagram[]
  ontology  Ontology[]
  funnels   Funnel[]
  kanban    Kanban[]
}

enum user_role {
  user
  admin
}
